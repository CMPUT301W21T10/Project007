<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7A67C6E6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trail_text"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/trail"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/ignoreImg"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Display" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/black"
            android:gravity="left"
            android:padding="10dp"
            android:text="date"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/black"
            android:gravity="right"
            android:padding="10dp"
            android:text="time"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/success_display"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:padding="10dp"
                android:text="Success count is "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/success_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="Success count"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fail_display"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:padding="10dp"
                android:text="Fail count is "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/fail_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="fail"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Location_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="Location is "
                android:textSize="15dp" />
            <TextView
                android:id="@+id/Location_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="N/A"
                android:textSize="15dp" />
        </LinearLayout>


</LinearLayout>



</LinearLayout>