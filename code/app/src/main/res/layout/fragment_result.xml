<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2E2FF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/type1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Type:"
            android:textColor="@color/details"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Median"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/description1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="@color/details"
            android:textSize="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/title1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Title:"
            android:textColor="@color/details"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Title"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/quartile11"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Q1:"
            android:textColor="@color/details"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/quartile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Quartile1"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/quartile22"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Q2:"
            android:textColor="@color/details"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/quartile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Quartile2"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/quartile33"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Q3:"
            android:textColor="@color/details"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/quartile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quartile3"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/median1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Median:"
            android:textColor="@color/details"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/median"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Median"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/mean1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="Mean:"
            android:textColor="@color/details"
            android:textSize="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/mean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mean"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/stdev1"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Stdev:"
            android:textColor="@color/details"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/stdev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Stdev"
            android:textSize="20dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Linear Chart"
        android:textColor="@color/details"
        android:textSize="20dp" />
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart"
        android:layout_width="fill_parent"
        android:layout_height="334dp"
        android:layout_below="@+id/chartLbl" />
    <TextView
        android:id="@+id/histogram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Histogram"
        android:textColor="@color/details"
        android:textSize="20dp" />
    <lecho.lib.hellocharts.view.ColumnChartView
        android:id="@+id/column_chart"
        android:layout_width="fill_parent"
        android:layout_height="301dp" />




</LinearLayout>