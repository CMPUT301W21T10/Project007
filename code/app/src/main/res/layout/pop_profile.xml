<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#A9617DAE"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/circle_bg_white"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#F4F4F7"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <TextView
            android:id="@+id/pop_id"
            android:textSize="16sp"
            android:text="ID:"
            android:visibility="invisible"
            android:textColor="#49558A"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="UserName"
                android:textSize="16sp"
                android:textColor="#49558A"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/pop_username"
                android:hint="username"
                android:textSize="14sp"
                android:textColor="#000"
                android:paddingLeft="15dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Phone"

                android:textSize="16sp"
                android:textColor="#49558A"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/pop_phone"
                android:hint="phone"
                android:textSize="14sp"
                android:textColor="#000"
                android:paddingLeft="15dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Email"
                android:textSize="16sp"
                android:textColor="#49558A"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/pop_email"
                android:hint="email"
                android:textSize="14sp"
                android:textColor="#000"
                android:paddingLeft="15dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/pop_edit"
            android:textSize="15sp"
            android:textColor="@color/color_fff"
            android:layout_gravity="center_horizontal"
            android:background="#617DAE"
            android:gravity="center"
            android:text="Edit"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</LinearLayout>